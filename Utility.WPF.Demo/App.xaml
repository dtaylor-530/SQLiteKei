<Application x:Class="Utility.WPF.Demo.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Utility.WPF.Demo.Infrastructure">
    <Application.Resources>
        <ResourceDictionary>

            <!--https://stackoverflow.com/questions/4813488/datatemplate-in-app-xaml-is-not-getting-picked-up-without-any-styles-->
            <Style TargetType="{x:Type Rectangle}" />

            <HierarchicalDataTemplate DataType="{x:Type local:UtilityLeafItem}" >
                <DockPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}" />
                    </StackPanel>
                </DockPanel>
            </HierarchicalDataTemplate>    
            
            <DataTemplate DataType="{x:Type local:TabViewModel}" >
                <DockPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}" FontSize="32"/>
                    </StackPanel>
                </DockPanel>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
