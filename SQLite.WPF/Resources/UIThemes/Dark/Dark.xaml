<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Database.WPF;component/Resources/UIThemes/Dark/Dark_Button.xaml" />
        <ResourceDictionary Source="/Database.WPF;component/Resources/UIThemes/Dark/Dark_ComboBox.xaml" />
        <ResourceDictionary Source="/Database.WPF;component/Resources/UIThemes/Dark/Dark_DataGrid.xaml" />
        <ResourceDictionary Source="/Database.WPF;component/Resources/UIThemes/Dark/Dark_GroupBox.xaml" />
        <ResourceDictionary Source="/Database.WPF;component/Resources/UIThemes/Dark/Dark_Menu.xaml" />
        <ResourceDictionary Source="/Database.WPF;component/Resources/UIThemes/Dark/Dark_ScrollBar.xaml" />
        <ResourceDictionary Source="/Database.WPF;component/Resources/UIThemes/Dark/Dark_TabControl.xaml" />
        <ResourceDictionary Source="/Database.WPF;component/Resources/UIThemes/Dark/Dark_TextBox.xaml" />
        <ResourceDictionary Source="/Database.WPF;component/Resources/UIThemes/Dark/Dark_TreeView.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!-- Colors -->
    <SolidColorBrush x:Key="ApplicationFontColor" Color="#EEE" />
    <SolidColorBrush x:Key="ApplicationFontColor_Disabled" Color="#555" />
    <SolidColorBrush x:Key="ApplicationBackground" Color="#2D2D30" />
    <SolidColorBrush x:Key="EnhancedApplicationBackground" Color="#2D2D30" />

    <!-- Global base styles -->
    <Style TargetType="{x:Type Window}">
        <Setter Property="Background" Value="{StaticResource ApplicationBackground}" />
        <Setter Property="Icon" Value="/Database.WPF;component/Resources/Icons/Logo_32x32.png" />
    </Style>

    <Style x:Key="WindowStyle" TargetType="{x:Type Window}" BasedOn="{StaticResource {x:Type Window}}">
    </Style>

    <!--<Style TargetType="{x:Type views:MainWindow}" BasedOn="{StaticResource {x:Type Window}}" />-->
    <!--<Style TargetType="{x:Type views:Preferences}" BasedOn="{StaticResource {x:Type Window}}" />
    <Style TargetType="{x:Type views:QueryEditor}" BasedOn="{StaticResource {x:Type Window}}" />-->
    <!--<Style TargetType="{x:Type views:SelectQueryUserControl}" BasedOn="{StaticResource {x:Type Window}}" />-->
    <!--<Style TargetType="{x:Type views:TableCreator}" BasedOn="{StaticResource {x:Type Window}}" />-->
    <!--<Style TargetType="{x:Type views:About}" BasedOn="{StaticResource {x:Type Window}}" />-->
    <!--<Style TargetType="{x:Type views:UnhandledExceptionWindow}" BasedOn="{StaticResource {x:Type Window}}" />-->

    <Style TargetType="{x:Type StatusBar}">
        <Setter Property="Background" Value="{StaticResource ApplicationBackground}" />
    </Style>

    <Style TargetType="{x:Type Label}">
        <Setter Property="Foreground" Value="{StaticResource ApplicationFontColor}" />
    </Style>
    <Style TargetType="{x:Type GridSplitter}">
        <Setter Property="Background" Value="#3F3F46" />
    </Style>
</ResourceDictionary>