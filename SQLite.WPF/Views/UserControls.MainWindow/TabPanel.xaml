<TabControl x:Name="MainTabControl"
            x:Class="SQLite.WPF.Views.UserControls.MainWindow.TabPanel"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:vm="clr-namespace:SQLite.ViewModel;assembly=SQLite.ViewModel"
            xmlns:infra="clr-namespace:SQLite.WPF.Infrastructure.Converter"
            d:DataContext="{d:DesignInstance vm:TabPanelViewModel}"
            mc:Ignorable="d"
            d:DesignHeight="450" d:DesignWidth="800"
            ItemsSource="{Binding TabItems, Mode=OneTime}"
            SelectedIndex="{Binding SelectedTabIndex, Mode=OneWay}"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch" >
    <TabControl.ItemContainerStyle>
        <Style TargetType="{x:Type TabItem}" >
            <Setter Property="Header" Value="{Binding Header}" />
            <Setter Property="Content" Value="{Binding Content}" />
            <Setter Property="ContentTemplateSelector" Value="{x:Static infra:DataTemplateSelector.Instance}"/>
        </Style>
    </TabControl.ItemContainerStyle>
</TabControl>
