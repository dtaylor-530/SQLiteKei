<Window x:Class="Sandbox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sandbox"
        xmlns:chart1="clr-namespace:Utility.Chart.WPF;assembly=Utility.Chart.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <UniformGrid>
        <chart1:ColumnSelectionsGrid x:Name="ColumnSelectionsGrid" ></chart1:ColumnSelectionsGrid>
        <chart1:DynamicSelectionChart x:Name="DynamicChart" ></chart1:DynamicSelectionChart>
        <DataGrid ItemsSource="{Binding ElementName=ColumnSelectionsGrid, Path=ColumnSelections}"></DataGrid>
    </UniformGrid>

</Window>
